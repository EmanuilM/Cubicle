<main>
    <h1>{{cube.name}}</h1>
    <img class="cube" src="{{cube.imageUrl}}">
    <div class="details">
        <p><span>Description:</span>{{cube.description}}.</p>
        <p><span>Difficulty level:</span> {{cube.level}}</p>
        <a class="btn" href="/">Back</a>
        {{#if isAuthenticated}} 
        {{#if isAuthor}}
        <a class="btn" href="/accessory/attach/{{cube.id}}">Atach Accessory</a>
        <a class="btn" href="/cubes/edit/{{cube.id}}">Edit</a>
        <a class="btn" href="/cubes/delete/{{cube.id}}">Delete</a>
        {{/if}}
        {{/if}}
    </div>
   
    <h2>Accessories</h2>
    <div class="accessories">
        {{#each cube.accessories}}
            {{>accessory}}
            {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
       
    </div>
</main>